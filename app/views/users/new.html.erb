<h1>Sign Up</h1>
<hr>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", autofocus: true %>
  </div>
  <div class="form-group">
      <%= f.submit "Sign Up", class: "btn btn-block btn-primary" %>
  </div>
<% end %>
<br>
<p>Already have an account? <%= link_to "Click here", login_path %> to log in.</p>