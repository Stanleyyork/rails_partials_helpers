<%= form_for @recipe do |f| %>
	<div class="form-group">
		<%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
	</div>
	<div class="form-group">
		<%= f.text_field :instructions, class: "form-control", placeholder: "Instructions", autofocus: true %>
	</div>
	<div class="form-group">
    	<%= f.submit "Save Recipe", class: "btn btn-block btn-primary" %>
	</div>
<% end %>